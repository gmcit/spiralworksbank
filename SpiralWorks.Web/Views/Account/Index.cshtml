@model IEnumerable<SpiralWorks.Model.Account>

@{
    ViewData["Title"] = "Index";
}
<br />
<div class="container">
    <div class="well">
        <h3> Bank Accounts</h3>
        <p>
            <a class="btn btn-success btn-sm" asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.AccountId)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.AccountNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>

                    <th scope="col">
                        @Html.DisplayNameFor(model => model.RowVersion)
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => item.AccountId)
                        </th>
                        <td>
                            <a asp-area="" asp-controller="Transaction" asp-action="Index"  asp-route-id="@item.AccountId">  @item.AccountNumber</a>
                        </td>
                        <td>
                            @item.AccountName
                        </td>
                        <td>
                          P @item.Balance
                        </td>
                        <td>
                            @item.DateCreated.ToShortDateString()
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RowVersion)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>