@model SpiralWorks.Web.Models.TransactionItemViewModel
@using SpiralWorks.Web.Helpers;
@using SpiralWorks.Interfaces;
@inject IUnitOfWork uow;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Create";
    var user = HttpContextAccessor.HttpContext.Session.Get<SpiralWorks.Model.User>("CurrentUser");
}
<br />
<div class="container">
    <div class="well">
        <div class="container">
            <div class="row">
                <h3>Create</h3>
                <h4>Bank Transaction</h4>
                <hr />
            </div>
            <div class="row">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>Transaction Type</label>
                                <select id="TransactionType" asp-for="TransactionType" class="form-control" asp-items="@SelectListHelper.TransactionTypeList()" onchange=""></select>
                                <span asp-validation-for="TransactionType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Bank Accounts</label>
                                <select id="AccountId" asp-for="AccountId" class="form-control" asp-items="@SelectListHelper.AccountList(uow, user.UserId)" onchange=""></select>
                                <span asp-validation-for="AccountId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Transfer To </label>
                                <select id="AccountId" asp-for="ToAccountId" class="form-control" asp-items="@SelectListHelper.AccountList(uow, user.UserId)" onchange=""></select>
                                <span asp-validation-for="ToAccountId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateCreated" class="control-label"></label>
                                <div class='input-group date' id='DateCreated'>
                                    <input asp-for="DateCreated" class="form-control" type='date' />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                <span asp-validation-for="DateCreated" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12 text-left">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <input type="hidden" asp-for="RowVersion" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-left">
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

