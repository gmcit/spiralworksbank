@model IEnumerable<TransactionItemViewModel>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                TransactionId
            </th>
            <th scope="col">
                Account Number
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Debit
            </th>
            <th scope="col">
                Credit
            </th>

            <th scope="col">
                Source Account Number
            </th>
            <th scope="col">
                RowVersion
            </th>
            <th scope="col">
                DateCreated
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </th>
                <td>
                    @item.AccountNumber
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Debit
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SourceAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RowVersion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
            </tr>
        }
    </tbody>
</table>
